#pragma config(Sensor, S1,     lightsensorleft,      sensorTouch)
#pragma config(Sensor, S3,     lightsensorRight,     sensorTouch)
#pragma config(Sensor, S4,     touchsensor,    sensorLightActive)
#pragma config(Motor,  motorA,  driveMotorLeft,    tmotorNXT, PIDControl, encoder)
#pragma config(Motor,motorB,driveMotorRight,    tmotorNXT, PIDControl, encoder)//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
#pragma config(Motor,  motorC,  fightarmMotor,    tmotorNXT, PIDControl, encoder)

task main()
{
//this is the program that runs the BATTLE BOTTTT

bool rightturnbool=false;
bool leftturnbool=false

while(true){
			//if both sensors detect nothing move forwards
			if(lightsensorleft[sensorValue]<____ && lightsensorright[sensorValue]<____){

			  motor[driveMotorright]=90;
			  motor[driveMotorLeft]=100;

		}


			  //if the left light sensor detects the border turn around
			if(lightsensorleft[sensorValue]>____ ){


			leftturnbool=true

			}


			//if the right light sensor detects the border turn around
	  	if(lightsensorRight[sensorValue]>____ ){


			
			Rightturnbool=true


			}

			//if the touch sensor is activated then beat up other robot
			if(touchsensor==true){
			
				nmotorencoder[fightarmMotor]=0;
			nMotorEncoderTarget[ fightarmMotor]=90;
			motor[ fightarmMotor]=100;	

			


			}
			
			if(rightturnbool==true){
				
				for(int i=0; i<754; i++){
			
			
			
			motor[driveMotorright]=-90;
			
			
			
			}	
			
		}
	
			if(leftturnbool==true){
				
			
		for(int i=0; i<754; i++){
			
			
			
			motor[driveMotorleft]=-90;
			
			
			
			}	
			
			
		}





}

}
