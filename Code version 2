#pragma config(Sensor, S1,     lightsensorLeft, sensorLightActive)
#pragma config(Sensor, S3,     lightsensorRight, sensorLightActive)
#pragma config(Sensor, S4,     touchsensor,    sensorTouch)
#pragma config(Motor,  motorA,          driveMotorLeft, tmotorNXT, PIDControl, encoder)
#pragma config(Motor,  motorB,          fightarmMotor, tmotorNXT, PIDControl, encoder)
#pragma config(Motor,  motorC,          driveMotorRight, tmotorNXT, PIDControl, encoder)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{
//this is the program that runs the BATTLE BOTTTT

bool rightturnbool=false;
bool leftturnbool=false;

while(true){
			//if both sensors detect nothing move forwards
			if(SensorValue[lightsensorLeft] > 60 && SensorValue[lightsensorRight] > 60 ){

			  motor[motorC]=100;
			  motor[motorA]=100;

		}


			  //if the left light sensor detects the border turn around
			if(SensorValue[lightsensorLeft] < 50 ){


			leftturnbool=true;

			}


			//if the right light sensor detects the border turn around
	  	if(SensorValue[lightsensorRight] < 50 ){



			rightturnbool=true;


			}
int meap = 0;
			//if the touch sensor is activated then beat up other robot
			if(SensorValue[touchsensor] == 1 && meap != 1)

				nMotorEncoder[fightarmMotor]=0;
				
			nMotorEncoderTarget[ fightarmMotor]= -80;
			motor[fightarmMotor] = -40;
			motor[fightarmMotor]=0;	
			while(nMotorRunState[fightarmMotor] != runStateIdle) {}
			meap = 1;


			}

			if(rightturnbool==true){

				for(int i=0; i<754; i++){



			motor[driveMotorRight]=-90;



			}	

		}

			if(leftturnbool==true){


		}





}
